                    <TextView
                        android:id="@+id/harga6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 8.000"
                        android:textColor="@color/btnpress" />
                    <Button
                        android:id="@+id/btnbeli3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="beli"
                        style="@style/BtnLogin"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/cau" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Es Cau"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/harga7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 4.000"
                        android:textColor="@color/btnpress" />
                    <Button
                        android:id="@+id/btnbeli4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="beli"
                        style="@style/BtnLogin"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/degan" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Es Degan"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/harga8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 8.000"
                        android:textColor="@color/btnpress" />
                    <Button
                        android:id="@+id/btnbeli5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="beli"
                        style="@style/BtnLogin"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/brasil" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Es Brasil"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/harga9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 3.000"
                        android:textColor="@color/btnpress" />
                    <Button
                        android:id="@+id/btnbeli6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="beli"
                        style="@style/BtnLogin"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

    </LinearLayout>
</ScrollView>
