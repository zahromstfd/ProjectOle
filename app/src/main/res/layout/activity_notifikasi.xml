<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header Layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/headerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Notifikasi"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/backicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <ImageButton
            android:id="@+id/basketIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/cart" />

        <ImageButton
            android:id="@+id/profileIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/basketIcon"
            android:layout_centerVertical="true"
            android:src="@drawable/profilku" />

    </RelativeLayout>

    <!-- Order Received Layout -->
    <LinearLayout
        android:id="@+id/layout_order_received"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/icon_order_received"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/diterima"
            android:contentDescription="Order Received Icon" />

        <TextView
            android:id="@+id/text_order_received"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Order Received"
            android:paddingLeft="8dp"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/time_order_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00 AM"
            android:textAppearance="?android:textAppearanceSmall" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pending_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/icon_pending_payment"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/tertunda"
            android:contentDescription="Pending Payment Icon" />

        <TextView
            android:id="@+id/text_pending_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pending Payment"
            android:paddingLeft="8dp"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/time_pending_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:00 AM"
            android:textAppearance="?android:textAppearanceSmall" />
    </LinearLayout>

    <!-- Payment Successful Layout -->
    <LinearLayout
        android:id="@+id/layout_payment_successful"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/icon_payment_successful"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/diterima"
            android:contentDescription="Payment Successful Icon" />

        <TextView
            android:id="@+id/text_payment_successful"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Payment Successful"
            android:paddingLeft="8dp"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/time_payment_successful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:00 AM"
            android:textAppearance="?android:textAppearanceSmall" />
    </LinearLayout>

</LinearLayout>