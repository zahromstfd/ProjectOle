<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fragments.KeranjangFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/container_fragment">

        <TextView
            android:id="@+id/headerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Keranjang"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/backicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <ImageButton
            android:id="@+id/basketIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/cart" />

        <ImageButton
            android:id="@+id/profileIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/basketIcon"
            android:layout_centerVertical="true"
            android:src="@drawable/profilku" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fotoKlanting"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/klanting"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namaKlanting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Klanting"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/hargaKlanting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 15.000"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/minus"
            tools:ignore="DuplicateIds"/>

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="0"
            android:textSize="20sp"
            tools:ignore="DuplicateIds"/>

        <ImageButton
            android:id="@+id/plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/tambah"
            tools:ignore="DuplicateIds"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fototempe"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tempe"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namatempe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tempe Kripik"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/hargatempe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 10.000"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/minus1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/minus" />

        <TextView
            android:id="@+id/quantity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="0"
            android:textSize="20sp"
          />

        <ImageButton
            android:id="@+id/plus1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/tambah"
            tools:ignore="DuplicateIds"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gambarnopia"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/nopia"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namanopia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nopia"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/harganopia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 18.000"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/minus2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/minus"
           />

        <TextView
            android:id="@+id/quantity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="0"
            android:textSize="20sp"
            />

        <ImageButton
            android:id="@+id/plus2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/tambah"
            />

    </LinearLayout>

</LinearLayout>